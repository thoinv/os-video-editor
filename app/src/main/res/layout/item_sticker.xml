<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sticker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sticker_ic_1" />

    <View
        android:id="@+id/view_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_item_selected_border"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sticker"
        app:layout_constraintLeft_toLeftOf="@+id/iv_sticker"
        app:layout_constraintRight_toRightOf="@+id/iv_sticker"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>